  title Movie-Trailer
  style.
    .cont{
      margin-top: 25vh;
    }
    h5{
      margin-left: 40%;
      margin-top: 40px;
    }
    .err{
      color: #ee6e73;
    }
    .git{
      position: absolute;
      display: inline-block;
      padding: 15px;
    }

.git
  a.git-a(href='https://github.com/snocoder/movie-trailer')
    span(style='font-size: 30px; color: #000;')
      i.fa.fa-github


h5 Search Movie Trailer
.cont
  
  .row
    form.col.s6.offset-s3(action='/getTrailer' method='POST')
      
      .row
        .input-field
          input(placeholder='movie name..' type='text' name='trailer')
          label(for='first_name') Search Movie Name
        if error
          p.err #{error} *
      .row
        button.btn.waves-effect.waves-light(type='submit')
          | Search

