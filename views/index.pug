doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  meta(http-equiv='X-UA-Compatible' content='ie=edge')
  link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css')
  script(src='https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js')
  link(href='https://fonts.googleapis.com/icon?family=Material+Icons' rel='stylesheet')
  link(href='https://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css' rel='stylesheet')
  title Movie-Trailer
  style.
    .con{
      position: relative;
      padding: 13px;
    }
    .cont{
      margin-top: 25vh;
    }
    h5{
      margin-top: 5%;
    }
    
    .err{
      color: #ee6e73;
    }
    .git{
      position: absolute;
      display: inline-block;
      padding: 15px;
      margin-bottom: 0;
      margin-top: 10%;
    }



.con

  h5.center-align Search Movie Trailer
  .cont
    
    .row
      form.col.m6.s12.offset-m3(action='/getTrailer' method='POST')
        
        .row
          .input-field
            input(placeholder='movie name..' type='text' name='trailer')
            label(for='first_name') Search Movie Name
          if error
            p.err #{error} *
        .row
          button.btn.waves-effect.waves-light(type='submit')
            | Search

  .git
    a.git-a(href='https://github.com/snocoder/movie-trailer')
      span(style='font-size: 30px; color: #000;')
        i.fa.fa-github